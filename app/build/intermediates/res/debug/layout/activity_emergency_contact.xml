<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="universityofmalaya.mysurvival.BasicInfo"
    android:background="#ff8ac2ff">

    <ImageView
        android:src="@drawable/emergency_call"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff8d5dff"
        android:outlineProvider="background"
        android:cropToPadding="false" />




    <AutoCompleteTextView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text=""
        android:id="@+id/autoCompleteTextView"
        android:layout_below="@+id/imageView2"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffffff"
        android:textColor="#ffff4c13"
        android:textSize="20dp"
        android:textIsSelectable="false" />
    <Button
        android:id="@+id/smsButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Send Sms"

        android:background="#ff7575ff"
        android:layout_below="@+id/autoCompleteTextView"
        android:layout_centerHorizontal="true">

    </Button>

</RelativeLayout><!-- From: file:/home/sopnopriyo/AndroidStudioProjects/MYSurvival/app/src/main/res/layout/activity_emergency_contact.xml -->