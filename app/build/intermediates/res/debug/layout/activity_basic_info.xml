<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="universityofmalaya.mysurvival.BasicInfo">

    <ImageView
        android:src="@drawable/basic_banner"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff8d5dff"
        android:outlineProvider="background"
        android:cropToPadding="false" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basic_text"

            android:id="@+id/textView"
            android:inputType="textMultiLine"
            android:maxLines="100"
            android:background="#ffd1b0ff"

            android:paddingLeft="5dp"
            android:padding="10dp"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true" />

    </ScrollView>


</RelativeLayout><!-- From: file:/home/sopnopriyo/AndroidStudioProjects/MYSurvival/app/src/main/res/layout/activity_basic_info.xml -->